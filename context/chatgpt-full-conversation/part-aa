        # patch files
        if item.filename=='velocity-banking-mvp/README.md':
            data=updated_readme.encode('utf-8')
        if item.filename=='velocity-banking-mvp/docs/00_README.md':
            data=updated_docs0.encode('utf-8')
        zout.writestr(item.filename, data)
        
